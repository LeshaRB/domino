<?xml version="1.0" encoding="UTF-8"?>
<module>
  <inherits name="com.google.gwt.user.User"/>
  <inherits name="com.google.gwt.user.theme.clean.Clean"/>
  <inherits name="com.progressoft.brix.domino.logger.Logging"/>

  <inherits name="com.progressoft.brix.domino.gwt.Core"/>
  <inherits name="com.progressoft.brix.domino.api.Domino"/>

  <!--<inherits name="com.test.portal.webportal.WebPortalClientModule"/>-->
  <!--<inherits name="com.test.portal.webportal.WebPortalUIClientModule"/>-->

  <source path=""/>

  <entry-point class="com.test.portal.AppClientModule"/>

  <set-property name="user.agent" value="ie10,gecko1_8,safari"/>

  <!-- logging -->
  <set-property name="gwt.logging.logLevel" value="INFO"/>
  <set-property name="gwt.logging.enabled" value="TRUE"/>
  <set-property name="gwt.logging.consoleHandler" value="ENABLED"/>
  <set-property name="compiler.useSourceMaps" value="true"/>
  <set-property name="gwt.logging.simpleRemoteHandler" value="ENABLED"/>
  <set-configuration-property name="includeSourceMapUrl"
    value="static/gwt/extra/app/symbolMaps/__HASH___sourceMap__FRAGMENT__.json"/>

  <replace-with class="com.progressoft.brix.domino.gwt.client.logging.RestfulRemoteLogHandler">
    <when-type-is class="com.google.gwt.logging.client.SimpleRemoteLogHandler"/>
    <any>
      <when-property-is name="gwt.logging.enabled" value="TRUE"/>
      <when-property-is name="gwt.logging.simpleRemoteHandler" value="ENABLED"/>
    </any>
  </replace-with>
</module>
